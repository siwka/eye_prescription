<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="prescription_form">
        <%= render 'shared/prescription_form' %>
      </section>
    </aside>
  </div>
<% else %>
	<div class="center jumbotron">
		<% provide(:title, "Optician Prescription") %> 
		<h1>Home Page for <%= t('title.staticpages.home') %></h1>
	  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	</div>

	<%= link_to image_tag("okulary.jpg", alt: "Optician Logo"), 'http://www.opternative.com/' %>
<% end %>