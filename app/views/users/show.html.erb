<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag("okulary.jpg") %>
        <%= @user.name %>
      </h1>
      <p><%= @user.email%></p>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.prescriptions.any? %>
      <h3>Prescription (<%= @user.prescriptions.count %>)</h3>
      <ol class="prescriptions">
        <%= render @prescriptions %>
      </ol>
      <%=  will_paginate @prescriptions %>    
    <% end %>
  </div>  
</div>